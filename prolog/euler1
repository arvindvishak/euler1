#!/usr/bin/pl -q -t euler -f

range(N, N, [N]).
range(Start, End, Result) :-
	Start < End,
	Next is Start + 1,
	range(Next, End, Partial),
	Result = [Start | Partial].

filter([], []).
filter([H|T], Result) :-
	test(H),
	filter(T, Partial),
	Result = [H | Partial].
filter([H|T], Result) :-
	not(test(H)),
	filter(T, Result).

sum([], 0).
sum([H|T], Total) :-
	sum(T, SemiTotal),
	Total is H + SemiTotal.

test(N) :- N mod 3 =:= 0.
test(N) :- N mod 5 =:= 0.


euler :-
	range(1, 999, MyRange),
	filter(MyRange, MyFilteredRange),
	sum(MyFilteredRange, MyAnswer),
	format('~w~n', [MyAnswer]).
